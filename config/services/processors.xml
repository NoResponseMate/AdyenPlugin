<?xml version="1.0" encoding="UTF-8" ?>

<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <parameters>
        <parameter key="sylius_adyen.order_payment_processor.after_checkout.fail.unsupported_states" type="collection">
            <parameter type="constant">Sylius\Component\Order\Model\OrderInterface::STATE_CANCELLED</parameter>
        </parameter>
    </parameters>

    <services>
        <defaults public="true" />

        <service
            id="sylius_adyen.processor.authorization_state"
            class="Sylius\AdyenPlugin\Processor\Payment\AuthorizationStateProcessor"
        >
            <argument type="service" id="sylius_adyen.checker.adyen_payment_method" />
            <argument type="service" id="sylius_abstraction.state_machine" />
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

        <service
            id="sylius_adyen.processor.order.reverse_payment"
            class="Sylius\AdyenPlugin\Processor\Order\ReverseOrderPaymentProcessor"
        >
            <argument type="service" id="sylius.command_bus" />
            <argument type="service" id="sylius_abstraction.state_machine" />
            <argument type="service" id="sylius_adyen.checker.adyen_payment_method" />
        </service>

        <service
            id="sylius_adyen.processor.order.update_order_payment_state"
            class="Sylius\AdyenPlugin\Processor\Order\UpdateOrderPaymentStateProcessor"
        >
            <argument type="service" id="sylius_abstraction.state_machine" />
            <argument type="service" id="sylius_adyen.checker.adyen_payment_method" />
        </service>

        <service
            id="sylius_adyen.processor.refund.refund_payment_state"
            class="Sylius\AdyenPlugin\Processor\Refund\RefundPaymentStateProcessor"
        >
            <argument type="service" id="sylius_abstraction.state_machine" />
            <argument type="service" id="sylius_adyen.checker.adyen_payment_method" />
        </service>

        <service
            id="sylius_adyen.processor.manual_capture"
            class="Sylius\AdyenPlugin\Processor\Payment\ManualCaptureProcessor"
        >
            <argument type="service" id="sylius_adyen.checker.adyen_payment_method" />
            <argument type="service" id="sylius.command_bus" />
            <argument type="service" id="sylius_abstraction.state_machine" />
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

        <service
            id="sylius_adyen.order_processing.order_payment_processor.after_checkout.fail"
            class="Sylius\Component\Core\OrderProcessing\OrderPaymentProcessor"
        >
            <argument type="service" id="sylius.provider.payment.order" />
            <argument type="service" id="sylius.remover.payment.order" />
            <argument>%sylius_adyen.order_payment_processor.after_checkout.fail.unsupported_states%</argument>
            <argument>new</argument>
        </service>
    </services>
</container>
