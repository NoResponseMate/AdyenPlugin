<?xml version="1.0" encoding="UTF-8" ?>

<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <parameters>
        <parameter key="sylius_adyen.allowed_payment_states.generate_payment_link" type="collection">
            <parameter>new</parameter>
            <parameter>processing</parameter>
        </parameter>
    </parameters>

    <services>
        <defaults public="true"/>

        <service
            id="sylius_adyen.checker.esd_card_payment_support"
            class="Sylius\AdyenPlugin\Checker\EsdCardPaymentSupportChecker"
        >
            <argument>%sylius_adyen.esd.supported_card_brands%</argument>
        </service>

        <service
            id="Sylius\AdyenPlugin\Checker\EsdCardPaymentSupportCheckerInterface"
            alias="sylius_adyen.checker.esd_card_payment_support"
        />

        <service
            id="sylius_adyen.checker.adyen_payment_method"
            class="Sylius\AdyenPlugin\Checker\AdyenPaymentMethodChecker"
        >
            <argument type="service" id="sylius_adyen.repository.adyen_payment_detail" />
            <argument type="service" id="sylius_adyen.repository.payment_link" />
        </service>
        <service
            id="Sylius\AdyenPlugin\Checker\AdyenPaymentMethodCheckerInterface"
            alias="sylius_adyen.checker.adyen_payment_method"
        />

        <service
            id="sylius_adyen.checker.payment_pay_by_link_availability"
            class="Sylius\AdyenPlugin\Checker\PaymentPayByLinkAvailabilityChecker"
        >
            <argument type="service" id="sylius_adyen.repository.payment_link" />
            <argument type="service" id="sylius_adyen.repository.adyen_reference" />
            <argument type="service" id="sylius_adyen.checker.adyen_payment_method" />
        </service>

        <service
            id="sylius_adyen.checker.refund.order_refunds_list_availability"
            class="Sylius\AdyenPlugin\Checker\Refund\OrderRefundsListAvailabilityChecker"
            decorates="sylius_refund.checker.order_refunds_list_availability"
        >
            <argument type="service" id=".inner" />
            <argument type="service" id="sylius.repository.order" />
            <argument type="service" id="sylius_adyen.checker.adyen_payment_method" />
            <argument>%sylius_adyen.allowed_payment_states.generate_payment_link%</argument>
        </service>

        <service
            id="sylius_adyen.checker.refund.order_refunding_availability"
            class="Sylius\AdyenPlugin\Checker\Refund\OrderRefundingAvailabilityChecker"
            decorates="sylius_refund.checker.order_refunding_availability"
        >
            <argument type="service" id=".inner" />
            <argument type="service" id="sylius.repository.order" />
            <argument type="service" id="sylius_adyen.checker.adyen_payment_method" />
        </service>

        <service
            id="sylius_adyen.checker.zone_shipping_method_eligibility"
            class="Sylius\AdyenPlugin\Checker\Eligibility\ZoneShippingMethodEligibilityChecker"
        >
            <argument type="service" id="sylius.matcher.zone"/>
            <tag name="sylius.shipping_method_eligibility_checker"/>
        </service>

        <service
            id="sylius_adyen.checker.order_checkout_complete_integrity"
            class="Sylius\AdyenPlugin\Checker\OrderCheckoutCompleteIntegrityChecker"
        >
            <argument type="service" id="sylius.order_processing.order_processor"/>
            <argument type="service" id="sylius.manager.order"/>
            <argument type="service" id="validator"/>
            <argument type="service" id="translator"/>
        </service>
        <service id="Sylius\AdyenPlugin\Checker\OrderCheckoutCompleteIntegrityCheckerInterface" alias="sylius_adyen.checker.order_checkout_complete_integrity"/>
    </services>
</container>
